<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:id="budgetRoot"
            prefWidth="1000" prefHeight="700"
            styleClass="budget-root">

    <VBox spacing="20" layoutX="20" layoutY="20" prefWidth="960">

        <!-- PAGE TITLE + ADD BUTTON -->
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label text="Budgets" styleClass="page-title"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnAddBudget" text="Add Budget" styleClass="add-btn"/>
        </HBox>

        <!-- BUDGET TABLE -->
        <TableView fx:id="budgetTable" prefHeight="600" styleClass="table-dark">
            <columns>
                <TableColumn text="Category" prefWidth="200"/>
                <TableColumn text="Limit" prefWidth="120"/>
                <TableColumn text="Spent" prefWidth="120"/>
                <TableColumn text="Remaining" prefWidth="120"/>
            </columns>
            styleClass="budget-root"
            fx:controller="com.controller.BudgetController">

    <VBox spacing="20" layoutX="20" layoutY="20" prefWidth="960">

        <!-- TITLE & BUTTON -->
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label text="Budget" styleClass="page-title"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnAddBudget" text="Set Budget" styleClass="add-btn"/>
        </HBox>

        <!-- BUDGET SUMMARY CARD -->
        <VBox spacing="12" prefWidth="300" prefHeight="130" styleClass="budget-card">
            <Label text="Monthly Budget" styleClass="card-title"/>
            <Label fx:id="totalBudgetValue" text="$0.00" styleClass="card-value"/>

            <ProgressBar fx:id="budgetProgress" prefWidth="260" progress="0.4" styleClass="budget-progress"/>

            <HBox spacing="10">
                <Label text="Remaining:" styleClass="small-label"/>
                <Label fx:id="remainingBudgetValue" text="$0.00" styleClass="remaining-value"/>
            </HBox>
        </VBox>

        <!-- CATEGORY BUDGET TABLE -->
        <Label text="Category Budgets" styleClass="section-title"/>

        <TableView fx:id="categoryBudgetTable" prefHeight="450" styleClass="table-dark">

            <columns>
                <TableColumn fx:id="categoryColumn" text="Category" prefWidth="200"/>
                <TableColumn fx:id="allocatedColumn" text="Allocated" prefWidth="150"/>
                <TableColumn fx:id="spentColumn" text="Spent" prefWidth="150"/>
                <TableColumn fx:id="remainingColumn" text="Remaining" prefWidth="150"/>
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="150"/>
            </columns>

        </TableView>

    </VBox>

</AnchorPane>
