<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.controllers.DashboardController"
      spacing="20" styleClass="content-root"
      stylesheets="@../css/styles.css">

    <Label fx:id="welcomeLabel" styleClass="welcome-label" text="Welcome, User ðŸ‘‹" />

    <HBox spacing="16.0">
        <VBox prefHeight="110.0" prefWidth="260.0" styleClass="glass-card">
            <padding><Insets bottom="16" left="16" right="16" top="16" /></padding>
            <Label styleClass="card-title" text="Total Balance" />
            <Label fx:id="totalBalanceLabel" styleClass="card-value" text="0.00$" />
        </VBox>
        <VBox prefHeight="110.0" prefWidth="260.0" styleClass="glass-card">
            <padding><Insets bottom="16" left="16" right="16" top="16" /></padding>
            <Label styleClass="card-title" text="Total Income" />
            <Label fx:id="totalIncomeLabel" style="-fx-text-fill: #FF9C00;" styleClass="card-value" text="0.00$" />
        </VBox>
        <VBox prefHeight="110.0" prefWidth="260.0" styleClass="glass-card">
            <padding><Insets bottom="16" left="16" right="16" top="16" /></padding>
            <Label styleClass="card-title" text="Total Expenses" />
            <Label fx:id="totalExpensesLabel" style="-fx-text-fill: #9C0001;" styleClass="card-value" text="0.00$" />
        </VBox>
    </HBox>

    <GridPane hgap="16.0" vgap="16.0" VBox.vgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints percentWidth="50.0" />
            <ColumnConstraints percentWidth="50.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="ALWAYS" />
        </rowConstraints>

        <VBox spacing="8.0" styleClass="glass-card" GridPane.columnIndex="0">
            <padding><Insets bottom="16" left="16" right="16" top="16" /></padding>
            <Label styleClass="section-title" text="Your Assets" />
            <BarChart fx:id="assetsChart" VBox.vgrow="ALWAYS">
                <xAxis><CategoryAxis label="Month" /></xAxis>
                <yAxis><NumberAxis label="Amount" /></yAxis>
            </BarChart>
        </VBox>

        <VBox spacing="8.0" styleClass="glass-card" GridPane.columnIndex="1">
            <padding><Insets bottom="16" left="16" right="16" top="16" /></padding>
            <Label styleClass="section-title" text="Latest Transactions" />
            <TableView fx:id="latestTransactionsTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="titleColumn" prefWidth="33" text="Title" />
                    <TableColumn fx:id="dateColumn" prefWidth="33" text="Date" />
                    <TableColumn fx:id="amountColumn" prefWidth="34" text="Amount" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </GridPane>

</VBox>
