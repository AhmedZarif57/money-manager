<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.controllers.TransactionsController"
            prefHeight="720.0" prefWidth="1280.0"
            stylesheets="@../css/styles.css">

    <!-- Sidebar -->
    <left>
        <VBox prefWidth="220.0" spacing="10.0" styleClass="sidebar">
            <padding>
                <Insets top="20" right="16" bottom="20" left="16"/>
            </padding>

            <Label text="Money T" styleClass="sidebar-title"/>

            <VBox spacing="6.0">
                <Button fx:id="dashboardButton" text="Dashboard"
                        maxWidth="Infinity" styleClass="nav-button"/>
                <Button fx:id="transactionsButton" text="Transactions"
                        maxWidth="Infinity" styleClass="nav-button"/>
                <Button fx:id="analyticsButton" text="Analytics"
                        maxWidth="Infinity" styleClass="nav-button"/>
                <Button fx:id="budgetButton" text="Budget"
                        maxWidth="Infinity" styleClass="nav-button"/>
                <Button fx:id="settingsButton" text="Settings"
                        maxWidth="Infinity" styleClass="nav-button"/>
            </VBox>

            <VBox VBox.vgrow="ALWAYS"/>

            <Button fx:id="logoutButton" text="Log out"
                    maxWidth="Infinity" styleClass="logout-button"/>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <StackPane styleClass="content-root">
            <VBox spacing="20" prefWidth="1060" prefHeight="720">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <!-- PAGE TITLE + ADD BUTTON -->
                <HBox alignment="CENTER_LEFT" spacing="20">
                    <Label text="Transactions" styleClass="page-title"/>
                    <Pane HBox.hgrow="ALWAYS"/>
                    <Button fx:id="btnAddTransaction" text="Add Transaction" styleClass="add-btn" onAction="#handleAddTransaction"/>
                </HBox>

                <!-- FILTER BAR -->
                <HBox spacing="15" alignment="CENTER_LEFT" styleClass="filter-bar">
                    <Label text="Type:" styleClass="filter-label"/>
                    <ComboBox fx:id="filterType" promptText="All" prefWidth="120"/>

                    <Label text="Account:" styleClass="filter-label"/>
                    <ComboBox fx:id="filterAccount" promptText="All Accounts" prefWidth="140"/>

                    <Label text="Date:" styleClass="filter-label"/>
                    <DatePicker fx:id="filterDate" prefWidth="140"/>

                    <Pane HBox.hgrow="ALWAYS"/>
                    <Button fx:id="btnClearFilters" text="Reset" styleClass="clear-btn" onAction="#clearFilters"/>
                </HBox>

                <!-- TRANSACTIONS TABLE -->
                <TableView fx:id="transactionsTable" prefHeight="520" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn text="Date" prefWidth="120"/>
                        <TableColumn text="Category" prefWidth="150"/>
                        <TableColumn text="Type" prefWidth="100"/>
                        <TableColumn text="Account" prefWidth="150"/>
                        <TableColumn text="Amount" prefWidth="120"/>
                        <TableColumn text="Note" prefWidth="200"/>
                    </columns>
                </TableView>
            </VBox>
        </StackPane>
    </center>

</BorderPane>