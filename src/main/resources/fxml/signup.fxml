<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:controller="com.controllers.SignupController"
           xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           styleClass="login-root"
           stylesheets="@../css/styles.css">

    <VBox alignment="CENTER" spacing="12" maxWidth="400">
        <padding>
            <Insets top="40" right="40" bottom="40" left="40"/>
        </padding>

        <Label text="Create Account"
               styleClass="title-label"
               style="-fx-text-fill: white; -fx-font-family: 'Montserrat'; -fx-font-weight: bold;"/>

        <TextField fx:id="usernameField"
                   promptText="Username"
                   maxWidth="Infinity"/>

        <StackPane maxWidth="Infinity">
            <PasswordField fx:id="passwordField"
                           promptText="Password"
                           maxWidth="Infinity"/>
            <TextField fx:id="passwordTextField"
                       promptText="Password"
                       maxWidth="Infinity"
                       visible="false"
                       managed="false"/>
            <Button fx:id="togglePasswordButton"
                    text="ðŸ‘"
                    style="-fx-background-color: transparent; -fx-text-fill: #888888; -fx-cursor: hand; -fx-font-size: 16px;"
                    StackPane.alignment="CENTER_RIGHT"
                    translateX="-10"/>
        </StackPane>

        <StackPane maxWidth="Infinity">
            <PasswordField fx:id="confirmPasswordField"
                           promptText="Confirm Password"
                           maxWidth="Infinity"/>
            <TextField fx:id="confirmPasswordTextField"
                       promptText="Confirm Password"
                       maxWidth="Infinity"
                       visible="false"
                       managed="false"/>
            <Button fx:id="toggleConfirmPasswordButton"
                    text="ðŸ‘"
                    style="-fx-background-color: transparent; -fx-text-fill: #888888; -fx-cursor: hand; -fx-font-size: 16px;"
                    StackPane.alignment="CENTER_RIGHT"
                    translateX="-10"/>
        </StackPane>

        <Button fx:id="signupButton"
                text="Sign Up"
                maxWidth="Infinity"
                styleClass="login-btn"/>
        
        <Button fx:id="backToLoginButton"
                text="Back to Login"
                maxWidth="Infinity"
                styleClass="secondary-btn"/>
    </VBox>
</StackPane>