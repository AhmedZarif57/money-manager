<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.controllers.BudgetController"
            fx:id="budgetRoot"
            styleClass="budget-root">

    <VBox spacing="20"
          AnchorPane.topAnchor="20"
          AnchorPane.bottomAnchor="20"
          AnchorPane.leftAnchor="20"
          AnchorPane.rightAnchor="20">

        <!-- PAGE TITLE + ADD BUTTON -->
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label text="Budgets" styleClass="page-title"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnAddBudget" text="Add Budget" styleClass="add-btn"/>
        </HBox>

        <!-- BUDGET TABLE -->
        <TableView fx:id="budgetTable" VBox.vgrow="ALWAYS" styleClass="table-dark">
            <columns>
                <TableColumn fx:id="categoryColumn" text="Category" prefWidth="240"/>
                <TableColumn fx:id="limitColumn" text="Limit" prefWidth="160"/>
                <TableColumn fx:id="spentColumn" text="Spent" prefWidth="160"/>
                <TableColumn fx:id="remainingColumn" text="Remaining" prefWidth="160"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

    </VBox>

</AnchorPane>