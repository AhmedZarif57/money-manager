<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:id="mainRoot"
            prefWidth="1000" prefHeight="700"
            styleClass="main-root">

    <VBox spacing="20" layoutX="20" layoutY="20" prefWidth="960">

        <!-- PAGE TITLE -->
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label text="Money Manager" styleClass="page-title"/>
        </HBox>

        <!-- DASHBOARD NAVIGATION -->
        <HBox spacing="15" alignment="CENTER_LEFT" styleClass="nav-bar">
            <Button fx:id="btnDashboard" text="Dashboard" styleClass="nav-btn"/>
            <Button fx:id="btnTransactions" text="Transactions" styleClass="nav-btn"/>
            <Button fx:id="btnBudget" text="Budget" styleClass="nav-btn"/>
            <Button fx:id="btnSettings" text="Settings" styleClass="nav-btn"/>
        </HBox>

        <!-- MAIN CONTENT AREA -->
        <StackPane fx:id="mainContent" prefHeight="580" styleClass="content-area"/>

    </VBox>

</AnchorPane>
