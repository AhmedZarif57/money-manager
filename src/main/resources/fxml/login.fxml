<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:controller="com.controllers.LoginController"
           xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           styleClass="login-root"
           stylesheets="@../css/styles.css">

    <VBox alignment="CENTER" spacing="12" maxWidth="400">
        <padding>
            <Insets top="40" right="40" bottom="40" left="40"/>
        </padding>

        <Label text="Login to Continue"
               styleClass="title-label"
               style="-fx-text-fill: white;"/>

        <TextField fx:id="usernameField"
                   promptText="Username"
                   maxWidth="Infinity"/>

        <StackPane maxWidth="Infinity">
            <PasswordField fx:id="passwordField"
                           promptText="Password"
                           maxWidth="Infinity"/>
            <TextField fx:id="passwordTextField"
                       promptText="Password"
                       maxWidth="Infinity"
                       visible="false"
                       managed="false"/>
            <Button fx:id="togglePasswordButton"
                    text="ðŸ‘"
                    style="-fx-background-color: transparent; -fx-text-fill: #888888; -fx-cursor: hand; -fx-font-size: 16px;"
                    StackPane.alignment="CENTER_RIGHT"
                    translateX="-10"/>
        </StackPane>

        <Label fx:id="createAccountLabel"
               text="Create an account"
               style="-fx-text-fill: #3498db; -fx-cursor: hand; -fx-font-size: 12px;" />

        <Button fx:id="loginButton"
                text="Login"
                maxWidth="Infinity"
                styleClass="login-btn"/>
    </VBox>
</StackPane>