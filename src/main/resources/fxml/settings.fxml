<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.controllers.SettingsController"
            fx:id="settingRoot"
            prefWidth="1000" prefHeight="700"
            styleClass="setting-root"
            stylesheets="@../css/styles.css">

    <VBox spacing="20" layoutX="20" layoutY="20" prefWidth="960">

        <!-- PAGE TITLE -->
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label text="Settings" styleClass="page-title"/>
        </HBox>

        <!-- SETTINGS OPTIONS -->
        <VBox spacing="15">
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Currency:" styleClass="setting-label"/>
                <ComboBox fx:id="cmbCurrency" prefWidth="150"/>
            </HBox>
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Theme:" styleClass="setting-label"/>
                <ComboBox fx:id="cmbTheme" prefWidth="150"/>
            </HBox>
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Month:" styleClass="setting-label"/>
                <ComboBox fx:id="cmbMonth" prefWidth="150"/>
            </HBox>
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Notifications:" styleClass="setting-label"/>
                <CheckBox fx:id="chkNotifications"/>
            </HBox>
        </VBox>

        <Pane VBox.vgrow="ALWAYS"/>

        <Button fx:id="btnSaveSettings" text="Save Settings" styleClass="save-btn" onAction="#saveSettings"/>
        
        <HBox spacing="10" style="-fx-padding: 20 0 0 0;">
            <Button text="Change Password" styleClass="secondary-btn" onAction="#changePassword" prefWidth="200"/>
            <Button text="Reset Data" styleClass="danger-btn" onAction="#resetData" prefWidth="200"/>
            <Button text="Delete Account" styleClass="danger-btn" onAction="#deleteAccount" prefWidth="200"/>
        </HBox>

    </VBox>

</AnchorPane>