<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1"
            prefWidth="600" prefHeight="400"
            styleClass="budget-root">

    <VBox spacing="20" layoutX="160" layoutY="80" prefWidth="280">

        <Label text="Money Manager" styleClass="page-title"/>

        <TextField fx:id="usernameField" promptText="Username"/>
        <PasswordField fx:id="passwordField" promptText="Password"/>

        <Button fx:id="loginButton" text="Login" styleClass="add-btn"/>

    </VBox>

</AnchorPane>
