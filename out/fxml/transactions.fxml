<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.controllers.TransactionsController"
            fx:id="transactionsRoot"
            styleClass="transactions-root">

    <VBox spacing="20"
          AnchorPane.topAnchor="20"
          AnchorPane.bottomAnchor="20"
          AnchorPane.leftAnchor="20"
          AnchorPane.rightAnchor="20">

        <!-- PAGE TITLE + ADD BUTTON -->
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label text="Transactions" styleClass="page-title"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnAddTransaction" text="Add Transaction" styleClass="add-btn"/>
        </HBox>

        <!-- FILTER BAR -->
        <HBox spacing="15" alignment="CENTER_LEFT" styleClass="filter-bar">

            <Label text="Type:" styleClass="filter-label"/>
            <ComboBox fx:id="filterType" promptText="All" prefWidth="130"/>

            <Label text="Account:" styleClass="filter-label"/>
            <ComboBox fx:id="filterAccount" promptText="All Accounts" prefWidth="150"/>

            <Label text="Date:" styleClass="filter-label"/>
            <DatePicker fx:id="filterDate" prefWidth="150"/>

            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnClearFilters" text="Clear" styleClass="clear-btn"/>

        </HBox>

        <!-- TRANSACTIONS TABLE -->
            <TableView fx:id="transactionsTable" VBox.vgrow="ALWAYS" styleClass="table-dark">
            <columns>
                <TableColumn fx:id="dateColumn" text="Date" prefWidth="120"/>
                <TableColumn fx:id="titleColumn" text="Title" prefWidth="140"/>
                <TableColumn fx:id="typeColumn" text="Type" prefWidth="100"/>
                <TableColumn fx:id="accountColumn" text="Account" prefWidth="140"/>
                <TableColumn fx:id="amountColumn" text="Amount" prefWidth="120"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

    </VBox>

</AnchorPane>